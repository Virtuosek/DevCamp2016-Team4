</head>

<body id="home" data-action="@Request.RequestContext.RouteData.Values["action"].ToString().ToLower()"
      data-controller="@Request.RequestContext.RouteData.Values["controller"].ToString().ToLower()">

    <!-- Preloader -->
    <div id="preloader">
        <div id="status"></div>
    </div>

    @RenderSection("preheader", required: false)


    <!-- NavBar-->
    <nav class="navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">BeeBack</a>
            </div>

            <div class="collapse navbar-collapse navbar-right navbar-ex1-collapse">
                @RenderSection("navbar", false)
                <ul class="nav navbar-nav">
                    <li class="menuItem">
                        <a href="@Url.Action("Index", "Activities")">Activités</a>
                    </li>

                    @if (Request.IsAuthenticated)
                    {
                        <li class="menuItem">
                            @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </li>
                            @*<li class="menuItem">
                                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        <span>@Html.AntiForgeryToken()</span>


                                        <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                                    }
                                </li>*@
                    }
                    else
                    {
                        <li class="menuItem"><a href="#" data-toggle="modal" data-target="#login-modal">Login</a></li>
                    }
                </ul>
            </div>

        </div>
    </nav>

    @if (ViewBag.Landing == null || !ViewBag.Landing)
    {
        @:<div class="content-section-b" style="border-top: 0; padding: 0 0 24px 0">
        @:<div class="container">
    }

    @RenderBody()

    @if (ViewBag.Landing == null || !ViewBag.Landing)
    {
        @:</div>
        @:</div>
    }

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h3 class="footer-title"></h3>

                    <!-- LICENSE -->
                    <a rel="cc:attributionURL" href="http://www.andreagalanti.it/lab/flatfy/"
                       property="dc:title">Flatfy Theme</a> by
                    <a rel="dc:creator" href="http://www.andreagalanti.it"
                       property="cc:attributionName">Andrea Galanti</a>
                    is licensed to the public under
                    <BR>the <a rel="license"
                               href="http://creativecommons.org/licenses/by-nc/3.0/it/deed.it">
                        Creative
                        Commons Attribution 3.0 Lice-nse - NOT COMMERCIAL
                    </a>.


                </div> <!-- /col-xs-7 -->

                <div class="col-md-5">
                    <div class="footer-banner">
                        <h3 class="footer-title">Navigation</h3>
                        <ul>
                            <li>Accueil</li>
                            <li>Activités</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/app")

    <script src="~/js/owl.carousel.js"></script>
    <script src="~/js/script.js"></script>
    <!-- StikyMenu -->
    <script src="~/js/stickUp.min.js"></script>
    <script type="text/javascript">
        jQuery(function ($) {
            $(document).ready(function () {
                $('.navbar-default').stickUp();

            });
        });

    </script>
    <!-- Smoothscroll -->
    <script type="text/javascript" src="~/js/jquery.corner.js"></script>
    <script src="~/js/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>
    <script src="~/js/classie.js"></script>
    <script src="~/js/uiMorphingButton_inflow.js"></script>
    <!-- Magnific Popup core JS file -->
    <script src="~/js/jquery.magnific-popup.js"></script>


    @RenderSection("scripts", required: false)

    <!-- Login Modal -->
    <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="login-modal-label">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="login-modal-label">Login</h4>
                </div>
                <div class="modal-body">
                    @Html.Partial("_LoginFormPartial", new LoginViewModel())
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Login</button>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
